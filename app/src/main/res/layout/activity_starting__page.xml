<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    android:id="@+id/main"
    tools:context=".Starting_Page">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="90pt"
            android:layout_height="90pt"
            android:src="@drawable/punjab_police"
            android:layout_gravity="center"
            android:layout_marginBottom="20pt"
            />



        <TextView
            android:id="@+id/hading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:text="Crash\nInvestigation App"
            android:textColor="#494949"
            android:textSize="13pt"
            android:layout_marginBottom="10pt"/>

        <LinearLayout
            android:id="@+id/start"
            android:layout_width="120pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10pt"
            android:background="@drawable/button"
            android:elevation="1.5pt"
            android:gravity="center"
            android:layout_marginBottom="5pt"
            android:onClick="Start_new_Click"
            >

            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:background="@drawable/plus_icon"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="10pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:fontFamily="sans-serif"
                android:text="Start New Case"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/view"
            android:layout_width="120pt"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:background="@drawable/button"
            android:elevation="1.5pt"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="5pt"
            android:onClick="View_Case_Click"
            >

            <ImageView
                android:layout_width="13pt"
                android:layout_height="10pt"
                android:background="@drawable/black_eye_icon"
                android:paddingTop="10pt"
                android:layout_marginTop="10pt"
                android:layout_marginBottom="10pt"
                android:paddingBottom="10pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:fontFamily="sans-serif"
                android:text="View Case"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20pt"
        android:gravity="bottom"
        android:layout_marginBottom="20pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Developed by"
            android:textColor="#494949"
            android:textSize="7pt"
            android:textStyle="bold" />

        <ImageView

            android:layout_width="45pt"
            android:layout_height="16pt"
            android:layout_gravity="center"
            android:src="@drawable/anukai_logo" />
    </LinearLayout>


</RelativeLayout>