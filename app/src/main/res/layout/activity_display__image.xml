<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Display_Image">

    <ScrollView
        android:id="@+id/Main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10pt"
                android:layout_marginLeft="10pt"
                android:layout_marginRight="10pt"
                android:layout_marginBottom="10pt"
                android:orientation="vertical">

                <!--    CASE TEXT & CHECK ICON-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:layout_marginRight="3pt"
                        android:src="@drawable/car_icon" />

                    <TextView
                        android:id="@+id/Heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-light"
                        android:text="Car 1"
                        android:textStyle="bold"
                        android:textColor="#494949"
                        android:textSize="15pt"
                         />

                    <ImageView
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:layout_marginRight="3pt"
                        android:src="@drawable/delete_icon"
                        android:onClick="Delete_Car"/>

                    <ImageView
                        android:id="@+id/I_button"
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:onClick="I_button_Click"
                        android:src="@drawable/ic_info_outline_black_24dp" />



                </LinearLayout>

                <!--    LINE-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1pt"
                    android:background="#BFBFBF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/left_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7pt"
                    android:layout_marginBottom="-15pt"
                    android:layout_marginTop="2pt"
                    android:elevation="2pt"
                    android:paddingStart="10pt"
                    android:paddingEnd="10pt"
                    android:paddingBottom="5pt"
                    android:textStyle="bold"
                    android:paddingTop="5pt"
                    android:background="@drawable/button"
                    android:text="Left View"
                    android:textColor="#000"
                    android:textSize="8pt" />

                <ImageView
                    android:id="@+id/Image1"
                    android:layout_width="match_parent"
                    android:layout_height="180pt"
                    android:padding="5pt"
                    android:elevation="1.5pt"
                    android:layout_marginTop="2pt"
                    android:layout_marginBottom="2pt"
                    android:layout_marginStart="5pt"
                    android:layout_marginEnd="5pt"
                    android:background="@drawable/image_back"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginTop="3pt"
                android:orientation="vertical"
                >


                <TextView
                    android:id="@+id/right_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7pt"
                    android:layout_marginBottom="-15pt"
                    android:layout_marginTop="2pt"
                    android:elevation="2pt"
                    android:paddingStart="10pt"
                    android:paddingEnd="10pt"
                    android:paddingBottom="5pt"
                    android:textStyle="bold"
                    android:paddingTop="5pt"
                    android:background="@drawable/button"
                    android:text="Right View"
                    android:textColor="#000"
                    android:textSize="8pt" />
                <ImageView
                    android:id="@+id/Image2"
                    android:layout_width="match_parent"
                    android:layout_height="180pt"
                    android:padding="5pt"
                    android:background="@drawable/image_back"
                    android:elevation="1.5pt"
                    android:layout_marginTop="2pt"
                    android:layout_marginBottom="5pt"
                    android:layout_marginStart="5pt"
                    android:layout_marginEnd="5pt"
                    />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginTop="3pt"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/front_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7pt"
                    android:layout_marginBottom="-15pt"
                    android:layout_marginTop="2pt"
                    android:elevation="2pt"
                    android:paddingStart="10pt"
                    android:paddingEnd="10pt"
                    android:paddingBottom="5pt"
                    android:textStyle="bold"
                    android:paddingTop="5pt"
                    android:background="@drawable/button"
                    android:text="Front View"
                    android:textColor="#000"
                    android:textSize="8pt" />
                <ImageView
                    android:id="@+id/Image3"
                    android:layout_width="match_parent"
                    android:layout_height="180pt"
                    android:padding="5pt"
                    android:background="@drawable/image_back"
                    android:elevation="1.5pt"
                    android:layout_marginTop="2pt"
                    android:layout_marginBottom="2pt"
                    android:layout_marginStart="5pt"
                    android:layout_marginEnd="5pt"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginRight="5pt"
                android:layout_marginTop="3pt"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/rear_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7pt"
                    android:layout_marginBottom="-15pt"
                    android:layout_marginTop="2pt"
                    android:elevation="2pt"
                    android:paddingStart="10pt"
                    android:paddingEnd="10pt"
                    android:paddingBottom="5pt"
                    android:textStyle="bold"
                    android:paddingTop="5pt"
                    android:background="@drawable/button"
                    android:text="Rear View"
                    android:textColor="#000"
                    android:textSize="8pt" />
                <ImageView
                    android:id="@+id/Image4"
                    android:layout_width="match_parent"
                    android:layout_height="180pt"
                    android:padding="5pt"
                    android:background="@drawable/image_back"
                    android:elevation="1.5pt"
                    android:layout_marginTop="2pt"
                    android:layout_marginBottom="2pt"
                    android:layout_marginStart="5pt"
                    android:layout_marginEnd="5pt"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/image_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:visibility="gone"
        />

    <LinearLayout
        android:id="@+id/view_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:paddingTop="15pt"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_marginBottom="10pt"
            android:orientation="vertical">

            <!--    CASE TEXT & CHECK ICON-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15pt"
                    android:layout_height="15pt"
                    android:layout_marginRight="3pt"
                    android:src="@drawable/ic_arrow_back_black_24dp"
                    android:onClick="On_Back_click"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:text="Case Information"
                    android:textStyle="bold"
                    android:textColor="#494949"
                    android:textSize="15pt"
                    />

            </LinearLayout>

            <!--    LINE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:background="#BFBFBF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20pt"
            android:layout_marginEnd="15pt"
            android:layout_marginTop="5pt"
            >
            <ImageView
                android:layout_width="10pt"
                android:layout_height="match_parent"
                android:src="@drawable/file_icon"
                android:layout_marginEnd="5pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Case Name"

                android:textColor="#434343"
                android:textSize="12pt"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/Case_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35pt"
            android:layout_marginEnd="20pt"
            android:text="test1"
            android:textSize="10pt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20pt"
            android:layout_marginEnd="15pt"
            android:layout_marginTop="15pt"
            >
            <ImageView
                android:layout_width="10pt"
                android:layout_height="match_parent"
                android:src="@drawable/fir_number"
                android:layout_marginEnd="5pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FIR Number"

                android:textColor="#434343"
                android:textSize="12pt"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/FIR_Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35pt"
            android:layout_marginEnd="20pt"
            android:text="test1"
            android:textSize="10pt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20pt"
            android:layout_marginEnd="15pt"
            android:layout_marginTop="15pt"
            >
            <ImageView
                android:layout_width="10pt"
                android:layout_height="match_parent"
                android:src="@drawable/date_icon"
                android:layout_marginEnd="5pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date"

                android:textColor="#434343"
                android:textSize="12pt"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/Case_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35pt"
            android:layout_marginEnd="20pt"
            android:text="test1"
            android:textSize="10pt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20pt"
            android:layout_marginEnd="15pt"
            android:layout_marginTop="15pt"
            >
            <ImageView
                android:layout_width="10pt"
                android:layout_height="match_parent"
                android:src="@drawable/location_icon"
                android:layout_marginEnd="5pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Accident Area"

                android:textColor="#434343"
                android:textSize="12pt"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/Case_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35pt"
            android:layout_marginEnd="20pt"
            android:text="test1"
            android:textSize="10pt"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="20pt"
            android:layout_marginEnd="15pt"
            android:layout_marginTop="15pt"
            >
            <ImageView
                android:layout_width="10pt"
                android:layout_height="match_parent"
                android:src="@drawable/my_location_icon"
                android:layout_marginEnd="5pt"
                android:layout_marginTop="2pt"
                android:layout_marginBottom="2pt"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"

                android:textColor="#434343"
                android:textSize="12pt"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/Case_Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35pt"
            android:layout_marginEnd="20pt"
            android:text="test1"
            android:textSize="10pt"
            />

        <LinearLayout
            android:id="@+id/start"
            android:layout_width="90pt"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20pt"
            android:background="@drawable/button"
            android:elevation="1.5pt"
            android:gravity="center"
            android:layout_marginBottom="5pt"
            android:onClick="Delete_case"
            >

            <ImageView
                android:layout_width="10pt"
                android:layout_height="10pt"
                android:background="@drawable/delete_icon"
                android:layout_marginTop="7pt"
                android:layout_marginBottom="7pt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2pt"
                android:fontFamily="sans-serif"
                android:text="Delete Case"
                android:textColor="#000"
                android:textSize="8pt"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>