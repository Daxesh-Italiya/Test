<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".New_Case"
    android:onClick="BackGround_click">

    <!--TOP PORTION-->
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >

        <!--    APP NAME & LINE-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crash\nInvestigation App"
                android:textAlignment="center"
                android:textColor="#494949"
                android:textSize="15pt"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                />

            <!--    LINE-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1pt"
                android:layout_marginTop="10dp"
                android:background="#808080"
                />

        </LinearLayout>

        <!--        EYE ICON AND TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20pt"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/add_new_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start a New Case"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#6B6B6B"
                android:layout_marginLeft="15dp"
                />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:id="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/new_case_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/file_icon"
                android:layout_marginLeft="7pt"
                />

            <EditText
                android:id="@+id/Case_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Case Name "
                android:textSize="20dp"
                android:background="#00FFFFFF"
                android:textColor="#434343"
                android:layout_marginLeft="7pt"

                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fir_layout"
            android:layout_below="@+id/name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/new_case_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/fir_number"
                 android:layout_marginLeft="7pt"
                />

            <EditText
                android:id="@+id/FIR_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FIR Number"
                android:textSize="20dp"
                android:background="#00FFFFFF"
                android:textColor="#434343"
                android:layout_marginLeft="7pt"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/DateLayout"
            android:layout_below="@+id/fir_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/new_case_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/date_icon"
                 android:layout_marginLeft="7pt"
                />

            <TextView
                android:id="@+id/Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date"
                android:textSize="20dp"
                android:background="#00FFFFFF"
                android:textColor="#434343"
                android:layout_marginLeft="7pt"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Area_layout"
            android:layout_below="@+id/DateLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/new_case_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/location_icon"
                 android:layout_marginLeft="7pt"
                />

            <EditText
                android:id="@+id/Area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Accident Area"
                android:textSize="20dp"
                android:background="#00FFFFFF"
                android:textColor="#434343"
                android:layout_marginLeft="7pt"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Location_layout"
            android:layout_below="@+id/Area_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/new_case_bg"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/my_location_icon"
                 android:layout_marginStart="7pt"
                android:layout_gravity="top"
                />

            <TextView
                android:id="@+id/Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location"
                android:textSize="20dp"
                android:textColor="#434343"
                android:background="#00FFFFFF"
                android:layout_marginStart="7pt"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Get_Location_btn_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_above="@id/Location_layout"
            android:layout_marginStart="65dp"
            android:layout_marginBottom="-3pt"
            >
            <LinearLayout
                android:id="@+id/Get_Location_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/white_background"
                android:paddingStart="10pt"
                android:paddingEnd="10pt"
                android:elevation="2pt"
                android:paddingTop="5pt"
                android:paddingBottom="5pt"
                android:layout_marginStart="2pt"
                android:layout_marginEnd="2pt"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/locatiion_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Current Location"
                    android:textSize="7pt"
                    android:layout_marginStart="2pt"
                    android:textStyle="bold"
                    android:textColor="#000"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/polygon_icon"
                android:elevation="2pt"
                android:layout_marginStart="15pt"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/Location_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5pt"
            >
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="8pt"
                android:layout_gravity="center_vertical"
                android:layout_height="8pt" />
            <TextView
                android:id="@+id/Location_facing_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2pt"
                android:text="Pleas wait your location facing in progress"
                android:textColor="#FF0000"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/button"
            android:elevation="1.5pt"
            android:layout_marginBottom="3pt"
            android:layout_marginTop="10pt"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/Location_layout"
            android:padding="7pt"
            android:paddingStart="20pt"
            android:paddingEnd="20pt"
            android:onClick="Add_Data"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/check_icon"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Case"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />

        </LinearLayout>



    </RelativeLayout>





</RelativeLayout>